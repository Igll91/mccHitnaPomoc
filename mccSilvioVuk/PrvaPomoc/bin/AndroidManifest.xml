<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcc.education.vuk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mcc.education.vuk.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mcc.education.vuk.MainScreen"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/CustomTheme" >
        </activity>
        <activity
            android:name="mcc.education.vuk.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="mcc.education.vuk.FirstAidKitContentActivity"
            android:label="@string/title_activity_first_aid_kit_content"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="mcc.education.vuk.AllTipsActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="mcc.education.vuk.OtherMethodsActivity"
            android:label="@string/title_activity_other_methods" >
        </activity>
        <activity
            android:name="mcc.education.vuk.EmergencyScreen"
            android:label="@string/title_activity_emergency_screen" >
        </activity>
        <activity
            android:name="mcc.education.vuk.EmergencyBleedingScreen"
            android:label="@string/title_activity_emergency_bleeding_screen" >
        </activity>
        <activity
            android:name="mcc.education.vuk.EmergencyChokingScreen"
            android:label="@string/title_activity_emergency_choking_screen" >
        </activity>
        <activity
            android:name="mcc.education.vuk.EmergencyReanimation"
            android:label="@string/title_activity_emergency_reanimation" >
        </activity>
    </application>

</manifest>